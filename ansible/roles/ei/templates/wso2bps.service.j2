[Unit]
Description=WSO2 EI - Default profile
After=network.target

[Service]
ExecStart={{ carbon_home }}/wso2/business-process/bin/wso2server.sh start
ExecStop={{ carbon_home }}/wso2/business-process/bin/wso2server.sh stop
ExecRestart={{ carbon_home }}/wso2/business-process/bin/wso2server.sh restart
PIDFile={{ carbon_home }}/wso2/business-process/wso2carbon.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
